---
type Props = {
    text: string;
    href?: string;
    id?: string;
    className?: string;
}

const {text, href, id, className} = Astro.props

---
{href ? (
    <a href={href} class={`primary-button ${className}`} id={id}>
        {text}
    </a>
) : (
    <button class={`primary-button ${className}`} id={id}>
        {text}
    </button>
)}

<style lang="scss">
.primary-button{
    text-decoration: none;
    all: unset;
    cursor: pointer;
    color: var(--snow);
    background-color: var(--fox);
    min-width: max-content;
    width: inherit;
    flex: inherit;
    padding: 10px 20px;
    margin: 5px 0;
    border-radius: var(--radius-xl);
    font-size: 15px;
    font-weight: 700;
    letter-spacing: .25px;
    box-shadow: 0 4px 0 var(--fox-dark);
    transition: all 0.1s;
    text-align: center;
    &:hover{
        background-color: var(--fox-light);
    }
    &:active{
        box-shadow: none;
        transform: translateY(4px);
    }
}
</style>