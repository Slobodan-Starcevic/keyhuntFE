---
import PrimaryButton from './buttons/PrimaryButton.astro'
import { links } from '../utils/links'
---
<header class="header">
    <nav class="nav-wrapper">
        <img src="/images/text-logo-orange.svg" alt="keyhunt logo">
        <div class="button-wrapper">
            <PrimaryButton text='GET STARTED' href={links.home}/>
        </div>
    </nav>
</header>

<style lang="scss">
    .header{
        width: 100%;
        height: 70px;
        // border-bottom: 2px solid var(--smoke);
    }
    .button-wrapper{
        display: flex;
        width: max-content;
    }

    .nav-wrapper{
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: space-between;
        overflow: visible;
        
        img{
            max-height: 100%;
            width: auto;
        }
    }
    @media screen and (max-width : 767px) {
        .header{
            padding: var(--space-l);
        }
        .nav-wrapper img{
            height: 65%;
        }
    }
    @media screen and (min-width: 768px) and (max-width: 1079px) {
        .header{
            padding: var(--space-l) var(--space-4xl);
        }
        .nav-wrapper img{
            height: 90%;
        }
    }
    @media screen and (min-width : 1080px) {
        .header{
            padding: var(--space-l) 0;
            max-width: 1000px;
            margin: 0 auto;
        }
        .nav-wrapper img{
            height: 100%;
        }
    }
</style>