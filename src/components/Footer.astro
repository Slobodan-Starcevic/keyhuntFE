---
import { links } from "../utils/links";
import PrimaryButton from "./buttons/PrimaryButton.astro";


---
<footer>
    <section class="global-section">
        <div class="global-content-wrapper">
            <div class="header-helper-wrapper">
                <h1 class="header-helper">find your next home <span class="global-orange-color">with keyhunt</span></h1>
                <div class="button-wrapper">
                    <PrimaryButton text="GET STARTED FOR FREE" href={links.home}/>
                </div>
            </div>
        </div>
    </section>
    <div class="valley-wrapper">
        <img class="valley" src="/illustrations/valley-house.svg" alt="">
    </div>
    <section class="footer-content">
        <div class="footer-content-inner">
            <img src="/images/text-logo-white.svg" alt="">
            <p>Â© 2024 keyhunt. All Rights reserved</p>
        </div>
    </section>
</footer>

<style lang="scss">
    .header-helper-wrapper{
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: var(--space-2xl);
        .header-helper{
            text-align: center;
            max-width: 700px;
        }
    }
    .button-wrapper{
        display: flex;
        width: 100%;
        max-width: 300px;
    }
    
    .footer-content{
        width: 100%;
        height: auto;
        background-color: var(--fox);
        .footer-content-inner{
            width: 100%;
            height: 100%;
            display: flex;
            align-items: center;
        }
        img{
            margin: var(--space-2xl) 0;
        }
        p{
            color: var(--snow);
            font-size: var(--font-size-s);
            margin-bottom: var(--space-l);
        }
    }
    .valley-wrapper{
        position: relative;
        overflow: hidden;
        height: clamp(80px, 10vw, 200px);
        width: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
        .valley{
            height: 100%;
            object-fit: cover;
            transform: translateY(10px);
        }
    }
    @media screen and (max-width : 767px) {
        .footer-content-inner{
            flex-direction: column;
        }
        h1{
            font-size: var(--font-size-3xl);
        }
    }
    @media screen and (min-width: 768px) and (max-width: 1079px) {
        .footer-content-inner{
            flex-direction: row;
            justify-content: space-between;
            padding: 0 var(--space-6xl);
        }
        h1{
            font-size: var(--font-size-4xl);
        }
    }
    @media screen and (min-width : 1080px) {
        .footer-content-inner{
            flex-direction: row;
            justify-content: space-between;
            padding: 0;
            max-width: 800px;
            margin: 0 auto;
        }
        h1{
            font-size: var(--font-size-5xl);
        }
    }
</style>