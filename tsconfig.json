{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
      "verbatimModuleSyntax": true,
      "baseUrl": ".",
      "paths": {
        "@icons/*": ["public/icons/*"],
        "@illustrations/*": ["public/illustrations/*"],
        "@images/*": ["public/images/*"],
        "@components/*": ["src/components/*"],
        "@layout/*": ["src/layout/*"],
        "@pages/*": ["src/pages/*"],
        "@utils/*": ["src/utils/*"],
    }
  }
}
